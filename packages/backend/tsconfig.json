{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "types": [
      "express",
      "jest",
      "node"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types",
      "./node_modules/jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/middlewares/fileUploadHandler.test.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@thoughtforge/shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../shared" }
  ]
}
