{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "python scripts/dev/start_all.py",
    "build": "python scripts/ci/build.py",
    "test": "python scripts/ci/test.py",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "backend:dev": "yarn workspace @thoughtforge/backend dev",
    "backend:build": "yarn workspace @thoughtforge/backend build",
    "backend:test": "yarn workspace @thoughtforge/backend test"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3"
  }
}
